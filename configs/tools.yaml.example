# Example configuration for RAG comparison tool
# Copy this to tools.yaml and update with your values

tools:
  # Mawsuah/Vectara configuration
  mawsuah:
    api_key_env: VECTARA_API_KEY
    corpus_id: ${VECTARA_CORPUS_ID}
    base_url: https://api.vectara.io
    timeout: 30
    default_top_k: 5

  # Goodmem configuration
  goodmem:
    api_key_env: GOODMEM_API_KEY
    base_url: ${GOODMEM_BASE_URL}  # Optional, defaults to standard endpoint
    timeout: 30
    default_top_k: 5

# LLM evaluation configuration (optional)
llm:
  model: claude-opus-4-1-20250805
  api_key_env: ANTHROPIC_API_KEY
  max_tokens: 4096
  temperature: 0.7
